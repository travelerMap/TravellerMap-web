<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="conteinerComponents">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">250dp</item>
        <item name="android:background">@drawable/conteiner_components</item>
        <item name="android:layout_margin">20dp</item>
    </style>

    <style name="editText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/edit_text</item>
        <item name="android:padding">20dp</item>
        <item name="android:layout_marginLeft">40dp</item>
        <item name="android:layout_marginRight">40dp</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="botao">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">40dp</item>
        <item name="android:layout_marginRight">40dp</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:padding">20dp</item>
        <item name="android:textColor">@color/light_ciano</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/botao</item>
    </style>

    <style name="barraDeProgresso">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:visibility">invisible</item>
    </style>

    <style name="textoCadastreSe">
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginBottom">30dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/preto</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="tiluloCadastro">
        <item name="android:textSize">50sp</item>
        <item name="android:textColor">@color/light_ciano</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">100dp</item>

    </style>
</resources>